apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: ingressroutehello
  namespace: sample
spec:
  entryPoints:
    - websecure
  routes:
  - match: Host(`hello.{{domain}}`) && PathPrefix(`/`)
    kind: Rule
    priority: 1
    services:
    - name: helloworld
      namespace: sample
      port: 5000
  tls:                           
    domains:                   
    - main: hello.{{domain}}