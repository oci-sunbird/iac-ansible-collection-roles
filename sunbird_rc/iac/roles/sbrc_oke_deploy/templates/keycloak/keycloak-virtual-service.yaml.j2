apiVersion: networking.istio.io/v1beta1
kind: VirtualService
metadata:
  name: keycloak
spec:
  gateways:
    - istio-system/all-hosts
  hosts:
    - sbrc.{{domain}}
  http:
    - route:
        - destination:
            host: keycloak
            port:
              number: 8080
      headers:
        request:
          set:
            x-forwarded-proto: https
      match:
      - uri:
          prefix: /auth